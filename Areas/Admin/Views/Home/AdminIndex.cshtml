@{
    string strTitle = "Admin panel";
    ViewBag.Title = strTitle;
}

<div class="container">
    <div class="row panel-box">
        <div class="col-md-12 align-self-center">
            <h2>@strTitle</h2>
            <div class="row">
                <div class="col-md-6">
                    <h3>Product database management</h3>
                    <div class="panel-button-box">
                        <a asp-area="Admin" asp-controller="Management" asp-action="Index" class="btn btn-primary">Open product database</a>
                    </div>
                </div>
                <div class="col-md-6">
                    <h3>Order database management</h3>
                    <div class="panel-button-box">
                        <a asp-area="Admin" asp-controller="OrderManagement" asp-action="IndexOrder" class="btn btn-primary">Open order database</a>
                    </div>
                </div>
            </div>
            <br />
            <div class="panel-button-box">
                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
                    <input type="submit" value="Logout" />
                </form>
            </div>
        </div>
    </div>
</div>
